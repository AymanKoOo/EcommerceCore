@model Web.Areas.Admin.ViewModels.Deals.DealVM


<div class="contenti">
    <div class="container">
        <form asp-controller="Deal" enctype="multipart/form-data" asp-action="Edit" method="post">

            <input name="Id" value="@Model.Id" asp-for="Id" type="hidden" />
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Name:</label>
                        <input asp-for="Name" type="text" value="@Model.Name" class="form-control required" />
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Description:</label>

                        <input asp-for="Description" type="text" value="@Model.Description" class="form-control required" />

                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label>ImageFile:</label>
                        <input asp-for="Picture" type="file" class="form-control required" />
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <label>Home:</label>
                        <input asp-for="ShowOnBigBanner" type="checkbox" class="form-control required" />
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <label>Home:</label>
                        <input asp-for="ShowOnSmallBanner" type="checkbox" class="form-control required" />
                    </div>
                </div>


                <a asp-controller="Deal" asp-action="AddDiscounts" asp-route-dealID="@Model.Id">Add Discounts</a>

                <button class="btn btn-primary" type="submit">
                    Edit
                </button>

            </div>
        </form>
    </div>
</div>

