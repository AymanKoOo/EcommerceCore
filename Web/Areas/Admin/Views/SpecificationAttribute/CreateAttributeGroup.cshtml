@model Core.Entites.Catalog.SpecificationAttributeGroup

<form asp-controller="SpecificationAttribute" asp-action="CreateAttributeGroupAsync" method="post">

    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label>Name:</label>
                <input asp-for="Name" type="text" class="form-control required" />
            </div>
        </div>

        <div class="col-md-12">
            <div class="form-group">
                <label>Display Order</label>
                <input asp-for="DisplayOrder" type="number" class="form-control required" />
            </div>
        </div>
        <button class="btn btn-primary" type="submit">
            Add
        </button>

    </div>
</form>
