@model Web.Areas.Admin.ViewModels.Catalog.ASpecificationAttributeModel;

<form asp-controller="SpecificationAttribute" asp-action="CreateSpecificationAttribute" method="post">

    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label>Name:</label>
                <input asp-for="Name" type="text" class="form-control required" />
            </div>
        </div>

        <select asp-for="SpecificationAttributeGroupId">

            @foreach (var group in Model.SpecificationAttributeGroup)
            {
                <option value="@group.Id">@group.Name</option>
            }

        </select>


        <div class="col-md-12">
            <div class="form-group">
                <label>Display Order</label>
                <input asp-for="DisplayOrder" type="number" class="form-control required" />
            </div>
        </div>
        <button class="btn btn-primary" type="submit">
            Add
        </button>

    </div>
</form>
