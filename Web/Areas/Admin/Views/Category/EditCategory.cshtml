@model Web.Areas.Admin.ViewModels.Catalog.ACategoryModel


<div class="contenti">
    <div class="container">
        <form asp-controller="Category" enctype="multipart/form-data" asp-action="EditCategory" method="post">

            <input name="Id" value="@Model.Id" asp-for="Id" type="hidden" />
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Name:</label>
                        <input asp-for="Name" type="text" value="@Model.Name" class="form-control required" />
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Description:</label>

                        <input asp-for="Description" type="text" value="@Model.Description" class="form-control required" />

                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label>ImageFile:</label>
                        <input type="file" accept="image/*" name="ImgCategory" asp-for="ImgCategory" />
                    </div>
                </div>

                <a asp-controller="Category" asp-action="CategorySpecGroupAdd" asp-route-categoryId="@Model.Id">Add Specifaction Atrribute</a>

                <button class="btn btn-primary" type="submit">
                    Edit
                </button>

            </div>
        </form>
    </div>
</div>

