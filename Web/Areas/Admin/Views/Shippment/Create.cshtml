

@model Core.Entites.Shipping.ShippingMethods

<div class="contenti">
    <div class="container">
        <form asp-controller="Shippment" asp-action="Create" method="post">

            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Name:</label>
                        <input asp-for="Name" type="text" class="form-control required" />
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Description:</label>
                        <input asp-for="Description" type="text" class="form-control required" />
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <label>DisplayOrder:</label>
                        <input asp-for="DisplayOrder" type="number" class="form-control required" />
                    </div>
                </div>

                <button class="btn btn-primary" type="submit">
                    Add
                </button>

            </div>
        </form>
    </div>
</div>

