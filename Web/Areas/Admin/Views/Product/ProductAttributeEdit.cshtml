@model Web.Areas.Admin.ViewModels.Catalog.AProductAttributeCreate;

<form asp-controller="Product" asp-action="ProductAttributeEdit" method="post">

    <div class="row">

        @*<select asp-for="ProductAttributeId">

            @foreach (var att in Model.productAttributes)
            {
                <option value="@att.Id">@att.Name</option>
            }

        </select>*@

        <select asp-for="ProductAttributeOptionId">

            @foreach (var op in Model.productAttributeOptions)
            {
                if (op != null)
                {
                    <option value="@op.Id">@op.Name</option>
                }
            }

        </select>

        <div class="img-box">

            @foreach (var img in Model.productPictures)
            {
                
                <input type="radio" asp-for="PictureURL" value="@img.MimeType" />
                <img src="/uploads/@img.MimeType" />
            }

        </div>
        <input type="hidden" asp-for="ProductID" value="@Model.ProductID" />

        <div class="col-md-12">
            <div class="form-group">
                <label>Display Order</label>
                <input asp-for="DisplayOrder" type="number" class="form-control required" />
            </div>
        </div>

        <button class="btn btn-primary" type="submit">
            Add
        </button>

    </div>
</form>
