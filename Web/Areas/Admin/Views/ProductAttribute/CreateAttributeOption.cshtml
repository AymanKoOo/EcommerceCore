@model Web.Areas.Admin.ViewModels.Catalog.AProductAttributeOptionModel;

<form asp-controller="ProductAttribute" asp-action="CreateAttributeOption" method="post">

    <div class="row">

        <select asp-for="ProductAttributeId">

            @foreach (var att in Model.productAttributes)
            {
                <option value="@att.Id">@att.Name</option>
            }

        </select>

        <div class="col-md-12">
            <div class="form-group">
                <label>Value:</label>
                <input asp-for="Name" type="text" class="form-control required" />
            </div>
        </div>

        <div class="col-md-12">
            <div class="form-group">
                <label>Display Order</label>
                <input asp-for="DisplayOrder" type="number" class="form-control required" />
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group">
                <label>Price</label>
                <input asp-for="PriceAdjustment" type="number" class="form-control required" />
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group">
                <label>Weight</label>
                <input asp-for="WeightAdjustment" type="number" class="form-control required" />
            </div>
        </div>

        <button class="btn btn-primary" type="submit">
            Add
        </button>

    </div>
</form>
