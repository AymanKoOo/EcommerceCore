@model Web.DTOs.CategoryDTO


<style>
    .input-group > .input-group-addon > input[type=checkbox] {
        margin-left: 10px;
    }

    .input-group.file-caption-main.no-browse {
    }
</style>

<div class="contenti">
    <div class="container">
        <form asp-controller="Category" asp-action="AddCategory" method="post">

            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Name:</label>
                        <input asp-for="Name" type="text" class="form-control required" />
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Description:</label>

                        <input asp-for="Description" type="text" class="form-control required" />

                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label>ImageFile:</label>

                        <input asp-for="ImageName" type="text" class="form-control required" />
                    </div>
                </div>

                <button class="btn btn-primary" type="submit">
                    Add
                </button>

            </div>
        </form>
    </div>
</div>

