@model IEnumerable<Core.Entites.Catalog.Deal>

<div class="jumbotron">
    <div class="container-fluid">

        <div class="row">
            @foreach (var deals in Model)
            {
            <div class="col-lg-3 col-md-6 col-12">
                    <a asp-controller="Deals" asp-route-dealSlug="@deals.Slug" asp-action="Index">

                        <img class="img-fluid"
                             src="/uploads/@deals.dealPictures[0].picture.MimeType" />
                    </a>
            </div>
            }
        </div>
    </div>
</div>
